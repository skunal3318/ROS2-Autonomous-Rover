<launch>
    <let name="urdf_path" value="$(find-pkg-share autonomous_rover_description)/urdf/rover.urdf.xacro" />
    <let name="rviz_config_path" value="$(find-pkg-share autonomous_rover_description)/rviz/urdf_config.rviz" />

    <node pkg="robot_state_publisher" exec="robot_state_publisher">
        <param name="robot_description" command="xacro $(var urdf_path)" />
    </node>


    <node pkg="joint_state_publisher_gui" exec="joint_state_publisher_gui" />
    <node pkg="rviz2" exec="rviz2" args="-d $(var rviz_config_path)" />
    <node pkg="tf2_ros"
      exec="static_transform_publisher"
      args="0 0 0 0 0 0 base_footprint autonomous_rover/base_footprint/gpu_lidar"/>

</launch>